<p id="notice"><%= notice %></p>

<h1>Video Library</h1>

    <% @uploads.each do |upload| %>
      <br>
        <%= upload.name %>
      <br> 
        <%= link_to  video_tag(upload.video.url(:medium), autobuffer: false, size: "300x200#"), upload_path(upload)  %>
        <% if false %>
        <%= video_tag upload.video.url(:medium), controls: true, autobuffer: true, size: "300x200"  %>
        <%= video_tag upload.video.url(:medium) %>
        <%= image_tag upload.video.url(:thumb) %>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Edit', edit_upload_path(upload) %></td>
        <% end %>
        <td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

<br>

