<p> 
    <strong>Title: </strong>
    <%= @upload.name %>
</p>

<%= video_tag upload.video.url(:medium), controls: true, autobuffer: true, size: "300x200"  %>
<td><%= link_to 'Show', upload %></td>
<td><%= link_to 'Edit', edit_upload_path(upload) %></td>
<td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>


<% @upload.comments.each do |comment| %>
    <p>
        <strong> Commenter: </strong>
        <%= comment.user_id %>
    </p>

    <p>
        <strong> Comment: </strong>
        <%= comment.body   %>
    </p>

    <% end %>

    <h2> Add a Comment: </h2>
    <%= form_for([@upload, @upload.comments.build]) do |f| %>
        <p> 
        <%= f.label :user_id %> <br />
        <%= f.text_field :user_id %>
        
        </p>

        <p> 
        <%= f.label :body %> <br />
        <%= f.text_field :body %>
        
        </p>
     
        <p>
        <%= f.submit %>
        </p>
        <% end %>
        