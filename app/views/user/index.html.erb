<p id="notice"><%= notice %></p>


<% if current_user.role == 'Admin' %>
<h1>Admin Panel</h1>
<% else %>
<h1>Reseller Panel</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Reseller Id</th>  
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="<%= cycle('list_line_odd','list_line_even') %>" >
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.reseller_id %></td>
        <td><%= user.role %></td>
      
        <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :manage, User %>
<%= link_to 'New User', user_new_path %>
<% end %>
<br>
<%= link_to 'Back', uploads_path %>